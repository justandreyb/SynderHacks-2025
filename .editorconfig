# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java files - JetBrains/IntelliJ IDEA style
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120
ij_java_align_multiline_parameters = true
ij_java_align_multiline_parameters_in_calls = false
ij_java_align_multiline_extends_list = false
ij_java_align_multiline_method_brackets = false
ij_java_align_multiline_binary_operation = false
ij_java_align_multiline_assignment = false
ij_java_align_multiline_ternary_operation = false
ij_java_align_multiline_throws_list = false
ij_java_align_multiline_parenthesized_expression = false
ij_java_align_multiline_array_initializer_expression = false
ij_java_align_group_field_declarations = false
ij_java_space_before_method_parentheses = false
ij_java_space_before_method_call_parentheses = false
ij_java_space_before_if_parentheses = true
ij_java_space_before_for_parentheses = true
ij_java_space_before_while_parentheses = true
ij_java_space_before_switch_parentheses = true
ij_java_space_before_try_parentheses = true
ij_java_space_before_catch_parentheses = true
ij_java_space_before_synchronized_parentheses = true
ij_java_space_around_assignment_operators = true
ij_java_space_around_logical_operators = true
ij_java_space_around_equality_operators = true
ij_java_space_around_relational_operators = true
ij_java_space_around_bitwise_operators = true
ij_java_space_around_additive_operators = true
ij_java_space_around_multiplicative_operators = true
ij_java_space_around_shift_operators = true
ij_java_space_before_class_lbrace = true
ij_java_space_before_method_lbrace = true
ij_java_space_before_if_lbrace = true
ij_java_space_before_else_lbrace = true
ij_java_space_before_while_lbrace = true
ij_java_space_before_for_lbrace = true
ij_java_space_before_do_lbrace = true
ij_java_space_before_switch_lbrace = true
ij_java_space_before_try_lbrace = true
ij_java_space_before_catch_lbrace = true
ij_java_space_before_finally_lbrace = true
ij_java_space_before_synchronized_lbrace = true
ij_java_space_before_array_initializer_lbrace = false
ij_java_space_within_method_parentheses = false
ij_java_space_within_method_call_parentheses = false
ij_java_space_within_if_parentheses = false
ij_java_space_within_for_parentheses = false
ij_java_space_within_while_parentheses = false
ij_java_space_within_switch_parentheses = false
ij_java_space_within_try_parentheses = false
ij_java_space_within_catch_parentheses = false
ij_java_space_within_synchronized_parentheses = false
ij_java_space_within_braces = false
ij_java_space_within_brackets = false
ij_java_space_after_comma = true
ij_java_space_before_comma = false
ij_java_space_after_semicolon = true
ij_java_space_before_semicolon = false
ij_java_spaces_within_angle_brackets = false
ij_java_spaces_around_type_bounds_in_type_parameters = true
ij_java_blank_lines_before_package = 0
ij_java_blank_lines_after_package = 1
ij_java_blank_lines_before_imports = 1
ij_java_blank_lines_after_imports = 1
ij_java_blank_lines_around_class = 1
ij_java_blank_lines_around_field = 0
ij_java_blank_lines_around_method = 1
ij_java_blank_lines_around_field_in_interface = 0
ij_java_blank_lines_around_method_in_interface = 1
ij_java_blank_lines_after_class_header = 0
ij_java_class_count_to_use_import_on_demand = 5
ij_java_names_count_to_use_import_on_demand = 3
ij_java_packages_to_use_import_on_demand = java.awt.*,javax.swing.*
ij_java_imports_layout = *,|,javax.**,java.**,|,$*
ij_java_class_brace_style = end_of_line
ij_java_method_brace_style = end_of_line
ij_java_lambda_brace_style = end_of_line
ij_java_else_on_new_line = false
ij_java_while_on_new_line = false
ij_java_catch_on_new_line = false
ij_java_finally_on_new_line = false
ij_java_indent_case_from_switch = true
ij_java_case_statement_on_separate_line = true
ij_java_special_else_if_treatment = true
ij_java_enum_constants_wrap = off
ij_java_align_consecutive_variable_declarations = false
ij_java_align_consecutive_assignments = false
ij_java_align_subsequent_simple_methods = false
ij_java_space_before_annotation_array_initializer_lbrace = false
ij_java_space_before_annotation_parameter_list = false
ij_java_space_within_annotation_parentheses = false
ij_java_keep_first_column_comment = true
ij_java_keep_control_statement_in_one_line = true
ij_java_keep_blank_lines_in_declarations = 2
ij_java_keep_blank_lines_in_code = 2
ij_java_keep_blank_lines_before_rbrace = 2
ij_java_wrap_comments = false

# Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

[*.{gradle.kts}]
indent_style = space
indent_size = 4

# XML files (pom.xml, etc.)
[*.xml]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4
charset = utf-8

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# Configuration files
[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.json}]
indent_style = space
indent_size = 2
